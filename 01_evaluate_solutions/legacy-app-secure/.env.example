# Flask Application Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Flask Settings
FLASK_ENV=development
FLASK_DEBUG=False
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Database Configuration
DB_USER=your_database_user
DB_PASS=your_database_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=users_db

# API Keys (obtain from service providers)
API_KEY=your_api_key_here
EMAIL_SERVICE_URL=https://api.emailservice.com/send

# AWS Configuration (use IAM roles when possible)
# Leave these blank if using IAM roles or AWS credentials file
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Security Settings
SECRET_KEY=generate_a_random_secret_key_here
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/app/application.log

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
